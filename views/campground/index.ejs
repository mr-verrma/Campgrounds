<% layout('layouts/boilerplate')%>

<div id="map" style="width: 100%; height: 500px;"></div>

<h1>All Campgrounds</h1>
<% for (let camp of campground){%>
<div class="card mb-4" mb-3>
    <div class="row">
        <div class="col-md-4">
            <%if(camp.images.length) {%>
            <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
            <% }else {%>
            <img class="img-fluid" alt="NO image" src="No image">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %> </h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= camp.location%></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View</a>
            </div>
        </div>
    </div>
</div>
<% }%>


